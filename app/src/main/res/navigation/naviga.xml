<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/naviga"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.reto.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.reto.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <fragment
        android:id="@+id/ofertasFragment"
        android:name="com.example.reto.OfertasFragment"
        android:label="fragment_ofertas"
        tools:layout="@layout/fragment_ofertas" >
        <action
            android:id="@+id/action_ofertasFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
</navigation>