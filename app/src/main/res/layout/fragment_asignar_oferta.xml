<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ofertas.AsignarOfertaFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:clipToPadding="false"
        android:padding="30dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="randomFavor"
                android:textColor="#CE9563"
                android:textSize="16sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:textAllCaps="true" />

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                tools:text="lorem"
                android:textColor="#CE9563"
                card_view:layout_constraintTop_toBottomOf="@id/nameTxt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ubicacionTxt1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:text="Lugar:"
                android:textColor="#CE9563"
                card_view:layout_constraintTop_toBottomOf="@id/descriptionTxt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ubicacionTxt"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                tools:text="txurdinaga"
                android:layout_marginStart="60dp"
                android:textColor="#CE9563"
                card_view:layout_constraintStart_toEndOf="@id/ubicacionTxt1"
                card_view:layout_constraintTop_toBottomOf="@id/descriptionTxt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/usuarioPublica1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:text="Publicada por:"
                android:textColor="#CE9563"
                card_view:layout_constraintTop_toBottomOf="@id/ubicacionTxt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/usuarioPublica"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                tools:text="youssef@gmail.com"
                android:textColor="#CE9563"
                card_view:layout_constraintStart_toEndOf="@id/usuarioPublica1"
                card_view:layout_constraintTop_toBottomOf="@id/ubicacionTxt"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/estado1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="4dp"
                android:text="Estado: "
                android:textColor="#CE9563"
                card_view:layout_constraintTop_toBottomOf="@id/txtFecha1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="50dp"
                tools:text="false"
                android:textColor="#CE9563"
                card_view:layout_constraintStart_toEndOf="@id/estado1"
                card_view:layout_constraintTop_toBottomOf="@id/txtFecha1"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/txtFecha1"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:text="Publicada:    "
                android:textColor="#CE9563"
                card_view:layout_constraintTop_toBottomOf="@id/usuarioPublica1"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                tools:text="20/20/30"
                android:textColor="#CE9563"
                card_view:layout_constraintStart_toEndOf="@id/txtFecha1"
                card_view:layout_constraintTop_toBottomOf="@id/usuarioPublica1"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnAsignar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Asignar"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>