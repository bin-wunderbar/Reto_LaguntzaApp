<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Admin_Activity">


    <TextView
        android:id="@+id/txtAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="65dp"
        android:hint="@string/userAdmin"
        style="@style/texto"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="191dp"
        style="@style/texto"
        android:textColorHint="@color/white"
        android:layout_marginBottom="98dp"
        android:text="@string/gestionar_usuarios_laguntzaapp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <RadioGroup
        android:id="@+id/rdOptionUser"
        android:layout_width="231dp"
        android:layout_height="169dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="88dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/btnradioListarUser"
            style="@style/botones"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/fondo_boton"
            android:checked="false"
            android:text="@string/ver_todos_los_usuarios"
            app:layout_constraintBottom_toTopOf="@+id/btnradioReportUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDesc" />

        <RadioButton
            android:id="@+id/btnradioReportUser"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="302dp"
            style="@style/botones"
            android:background="@drawable/fondo_boton"
            android:text="@string/ver_usuarios_con_reportes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btnradioListarUser"
            app:layout_constraintTop_toBottomOf="@+id/btnradioListarUser" />

    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>